<td class="px-6 py-4 font-medium"><%= destination.name %></td>
<td class="px-6 py-4 text-center">
  <% if destination.is_commission %>
    <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-2 py-1 rounded-full">
      Sí
    </span>
  <% else %>
    <span class="inline-block bg-red-100 text-red-800 text-xs font-semibold px-2 py-1 rounded-full">
      No
    </span>
  <% end %>
</td>
<td class="px-6 py-4 text-center space-x-2">
  <%= link_to "Editar", edit_destination_path(destination),
      class: "text-blue-600 hover:underline font-medium", data: { turbo_frame: 'modal'} %>
  <%= link_to "Eliminar", destination_path(destination),
      data: { turbo_method: :delete, turbo_confirm: "¿Seguro?" },
      class: "text-red-600 hover:underline font-medium" %>
</td>
