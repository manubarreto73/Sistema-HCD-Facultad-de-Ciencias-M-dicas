<div class="index-container">
  <div class="index-background">
    <div class="index-title-container">
      <h2 class="text-2xl font-semibold text-gray-800">Temas</h2>
      <%= new_modal_button('Nuevo tema', new_subject_path) %>
    </div>

    <%= turbo_frame_tag "subjects" do %>
      <%= render "table", subjects: @subjects %>
      <div class="p-10">
        <%= render "shared/pagination_subjects", page: @page, total_pages: @total_pages %>
      </div>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag "modal" %>