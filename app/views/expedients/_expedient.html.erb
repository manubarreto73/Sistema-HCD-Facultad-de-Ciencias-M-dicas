<tr id="expedient_<%= expedient.id %>" class="hover:bg-gray-50 transition">
  <td class="px-6 py-4 font-medium"><%= expedient.file_number %></td>
  <td class="text-center"><%= expedient.subject&.name || 'Sin tema' %></td>
  <td class="text-center"><%= expedient.destination&.name || 'Sin destino' %></td>
  <td class="text-center"><%= expedient.responsible %></td>
  <td class="px-6 py-4 text-center space-x-2">
    <%= link_to "Ver",
      expedient_path(expedient),
      data: { turbo_frame: "modal" },
      class: "text-blue-600 hover:underline text-gray-600" %>

    <%= link_to "Editar",
        edit_expedient_path(expedient),
        class: "text-blue-600 hover:underline text-gray-600",
        data: { turbo_frame: "modal" } %>

    <%= link_to "Eliminar", modal_delete_expedient_path(expedient, page: params[:page]),  class: "text-red-600 hover:underline font-medium", data: { turbo_frame: 'modal'} %>

  </td>
</tr>
